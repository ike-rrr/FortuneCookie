<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".CookieActivity">


    <!-- Imatge de la galeta (tocar obre la frase) -->
    <ImageView
        android:id="@+id/imageCookie"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_cookie_closed"
        android:contentDescription="Cookie" />


    <!-- Text amb la frase (inicialment invisible) -->
    <TextView
        android:id="@+id/textPhrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageCookie"
        android:layout_marginTop="24dp"
        android:text=""
        android:textSize="18sp"
        android:gravity="center"
        android:visibility="gone" />


    <!-- Botons: compartir, copiar, recarregar -->
    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPhrase"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" />


    <ImageButton
        android:id="@+id/btnShare"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_share"
        android:contentDescription="Compartir"
        android:background="?attr/selectableItemBackgroundBorderless" />


    <ImageButton
        android:id="@+id/btnCopy"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_copy"
        android:contentDescription="Copiar"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp" />


    <ImageButton
        android:id="@+id/btnReload"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_reload" />
</RelativeLayout>